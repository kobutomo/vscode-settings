{
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.fontFamily": "Fira Code,Ricty Diminished,Consolas, 'Courier New', monospace",
    "editor.fontSize": 19,
    "window.zoomLevel": 0,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "workbench.colorTheme": "Atom One Dark",
    "emmet.triggerExpansionOnTab": true,
    "workbench.sideBar.location": "right",
    "phpfmt.php_bin": "\"\\var\\php\\php.exe\"",
    "terminal.integrated.cursorStyle": "line",
    "htmlhint.options": {
        "tagname-lowercase": false,
        "attr-lowercase": true,
        "attr-value-double-quotes": true,
        "doctype-first": false,
        "tag-pair": true,
        "spec-char-escape": false,
        "id-unique": true,
        "src-not-empty": true,
        "attr-no-duplication": true,
        "title-require": true
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "bu": true,
        "BU": true
    },
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "all",
    "editor.renderLineHighlight": "all",
    "editor.renderIndentGuides": false,
    "scssFormatter.useTabs": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 22,
    "workbench.activityBar.visible": true,
    "explorer.confirmDelete": false,
    "glassit.alpha": 255,
    "vsicons.dontShowNewVersionMessage": true,
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        {
            "text": "MARK:",
            "border": "1px solid #00ff37",
            "borderRadius": "2px",
            "backgroundColor": "#00ff373a",
            "color": "#ffffff",
        },
        {
            "text": "FIXME:",
            "color": "red",
            "border": "1px solid red",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)",
        },
        {
            "text": "TODO:",
            "color": "#ffffff",
            "border": "1px solid yellow",
            "borderRadius": "2px",
            "backgroundColor": "#ffff003b",
        },
        {
            "text": "NOTE:",
            "color": "#ffffff",
            "border": "1px solid #0004ff",
            "borderRadius": "2px",
            "backgroundColor": "#0004ff3b",
        }
    ],
    "git.enableSmartCommit": true,
    "html.format.contentUnformatted": "pre,code,textarea",
    "html.format.endWithNewline": false,
    "html.format.extraLiners": "head, body, /html",
    "html.format.indentHandlebars": false,
    "html.format.indentInnerHtml": false,
    "html.format.maxPreserveNewLines": null,
    "html.format.preserveNewLines": true,
    "html.format.wrapLineLength": 0,
    "html.format.wrapAttributes": "auto",
    "window.title": "${dirty}${rootName}${separator}${activeEditorLong}",
}